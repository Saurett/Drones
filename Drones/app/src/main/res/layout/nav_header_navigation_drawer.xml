    <TextView
        android:id="@+id/task_force_name"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorAccent"
        android:paddingTop="0dp"
        android:text="Task force name"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/colorPrimaryWhite"
        />
   <TextView
       android:id="@+id/task_element_name"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Task element name\nTask element second name"
       android:textSize="20sp"
       android:paddingStart="10dp"
       android:layout_gravity="top"
       android:textColor="@color/colorPrimaryWhite"
       />
    <TextView
        android:id="@+id/task_force_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task force location"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryWhite"
        />
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="LAT"
          android:textSize="15sp"
          android:paddingStart="10dp"
          />
      <TextView
          android:id="@+id/task_force_latitude"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="19°25'10''N"
          android:textStyle="bold"
          android:textSize="15sp"
          android:paddingStart="10dp"
          android:textColor="@color/colorPrimaryWhite"
          />
  </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LONG"
            android:textSize="15sp"
            android:paddingStart="10dp"
            />
        <TextView
            android:id="@+id/task_force_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19°25'10''O"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:textColor="@color/colorPrimaryWhite"
            />
    </LinearLayout>


