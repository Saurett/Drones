<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="550dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp"
    tools:context="texium.mx.drones.fragments.FinishTasksFragment">

   <LinearLayout
       android:id="@+id/progress_form"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="500dp"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="500dp"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="10dp">
              <ImageView
                  android:id="@+id/task_window_icon"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:background="@mipmap/ic_assignment_white"
                  android:backgroundTint="@color/colorAccent"
                  />
              <TextView
                  android:id="@+id/title_task_window"
                  android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:text="tittle task window"
                  android:textSize="20sp"
                  android:textColor="@color/colorPrimaryWhite"
                  android:textStyle="bold"
                  android:layout_marginLeft="20dp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="70dp">
              <TextView
                  android:id="@+id/content_task_window"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:textColor="@color/colorPrimaryWhite"
                  android:text="content task"

                  />
              <EditText
                  android:id="@+id/comment_task_window"
                  android:layout_width="450dp"
                  android:layout_height="70dp"
                  android:textSize="15sp"
                  android:textColor="@color/colorPrimaryWhite"
                  android:background="@color/colorPrimaryGray"
                  android:inputType="textMultiLine"
                  android:maxLength="200"
                  android:layout_marginTop="10dp"
                  />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="10dp">
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_marginBottom="15dp">
                         <TextView
                             android:id="@+id/number_photos"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="0"
                             android:textStyle="bold"
                             android:layout_marginRight="2dp"
                             android:textColor="@color/colorAccent"
                             />
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/picture_task_label"
                             android:textColor="@color/colorAccent"
                             />
                     </LinearLayout>
                     <Button
                         android:id="@+id/picture_task_button"
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:background="@drawable/icon_camera"
                         android:backgroundTint="@color/colorPrimaryWhite"
                         android:layout_gravity="center"
                         />
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_marginLeft="50dp">
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_marginBottom="15dp">
                         <TextView
                             android:id="@+id/number_videos"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="0"
                             android:textStyle="bold"
                             android:layout_marginRight="2dp"
                             android:textColor="@color/colorAccent"
                             />
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/video_task_label"
                             android:textColor="@color/colorAccent"
                             />
                     </LinearLayout>
                     <Button
                         android:id="@+id/video_task_button"
                         android:layout_width="40dp"
                         android:layout_height="40dp"
                         android:background="@drawable/icon_video"
                         android:layout_gravity="center"
                         />
                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="20dp">
                     <Button
                         android:id="@+id/back_task_button"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:textSize="50sp"
                         android:textColor="@color/colorPrimaryWhite"
                         android:background="@drawable/back"
                         android:backgroundTint="@color/colorAccent"
                         android:layout_gravity="center"
                         />
                     <Button
                         android:id="@+id/next_task_button"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:textSize="50sp"
                         android:textColor="@color/colorPrimaryWhite"
                         android:background="@drawable/next"
                         android:backgroundTint="@color/colorAccent"
                         android:layout_gravity="center"
                         android:layout_marginLeft="30dp"
                         />
                     <Button
                         android:id="@+id/send_task_button"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:text="@string/send_task_label"
                         android:textColor="@color/colorPrimaryWhite"
                         android:background="@color/colorAccent"
                         android:layout_gravity="center"
                         android:layout_marginLeft="30dp"
                         />
                 </LinearLayout>
              </LinearLayout>
          </LinearLayout>
      </LinearLayout>
       <LinearLayout
           android:layout_width="50dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:id="@+id/close_window_button"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:text="X"
               android:textSize="20sp"
               android:textStyle="bold"
               android:textColor="@color/colorAccent"
               android:background="@null"
               />
       </LinearLayout>
   </LinearLayout>

</FrameLayout>
